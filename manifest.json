{
  "manifest_version": 3,
  "name": "Copy Links Extension",
  "version": "1.0",
  "description": "extension to copy LinkedIn, website, and GitHub links.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "clipboardWrite"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
